{% embed 'partials/base_module.html.twig' %}
    {% set section_id = "team" %}
    {% set section_class = section_id %}

    {% block module_content %}
        {% set items_per_row = page.header.items_per_row in [1, 2, 3, 4, 6] ? page.header.items_per_row : 1 %}
        {% set col = 12 / items_per_row %} 
        

        <div class="row {{ classes.content_row }}">
            {% for item in page.header.items %}
                <div class="col-md-{{ col }} {{ classes.content_column }}">
                    <div class="item-icon {{ classes.extra_item }}">{{ include ("partials/_icon.html.twig") }}</div>
                    <div class="item-text {{ classes.extra_text }}">
                        {{ page_sections[item.section] }}
                    </div>
                </div>
            {% endfor %}
            </div>
        </div>
    {% endblock %}
{% endembed %}
